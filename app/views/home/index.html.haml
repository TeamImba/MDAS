%section{:class => "content container"}
  %section{:id => "content", :class => "box container_12"}
    %section{:class => "alpha grid_9"}
      %h1 Shop from Multiply Sellers Like:
      = image_tag("borderContent.png", :class => "imgborder")
      %ul{:class => "items"}
        - @products.each_with_index do |product, index|
          %li{:class => ((index.modulo(3) == 0)? "alpha " : (index.modulo(3) == 2 || index == @products.size - 1)? "omega " : "") + "grid_3"}
            .placeholder
              = link_to(image_tag(product.image_url, :alt => product.name, :title => product.name, :width => "193px", :height => "113px"), product_url(product.permalink), :target => "_blank", :rel => "external")
            =link_to(product.name, product_url(product.permalink), :target => "_blank", :rel => "external")
            %br
            %span Buy it from
            =link_to(product.seller, product.product_url, :target => "_blank", :rel => "external")
            
      %span{:class => "imgborder"}
      =link_to("View More items from Multiply Trusted Sellers", "javascript:void(0)", :class => "viewmore btn")
      %br
      %br
      =link_to("Shop at Multiply Marketplace", "javascript:void(0)", :class => "shop btn")
    =render "layouts/right_pane"