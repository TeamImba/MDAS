%section{:class => "content container"}
  %section{:id => "content", :class => "box container_12"}
    =render "layouts/left_pane"
    %section{:class => "omega grid_9"}
      %h1 Register to get your Multiply Tee now!
      %span{:class => "imgborder"}
      =form_tag(registration_path, :id => "signup_form") do
        %ul{ :id => "signup"}
          %li{ :class => "signupForm"}
            %ul
              %li{ :class => "label"}
                %h2
                  Multiply ID
                  %span{ :class => "red"} *
              %li{ :class => "textfield"}=text_field_tag("muid", "", :placeholder => "kimstore", :class => "required")
          %li{ :class => "signupForm"}
            %ul
              %li{ :class => "label"}
                %h2
                  Name
                  %span{ :class => "red"} *
              %li{ :class => "textfield"}=text_field_tag("name", "", :placeholder => "John Doe", :class => "required")
          %li{ :class => "signupForm"}
            %ul
              %li{ :class => "label"}
                %h2
                  Age
                  %span{ :class => "red"} *
              %li{ :class => "textfield"}=text_field_tag("age", "", :placeholder => "18", :class => "required digits", :minlength => "2", :maxlength => 2)
          %li{ :class => "signupForm"}
            %ul
              %li{ :class => "label"}
                %h2
                  Contact Number
                  %span{ :class => "red"} *
              %li{ :class => "textfield"}=text_field_tag("num", "", :placeholder => "6300012345678", :class => "required digits")
          %li{ :class => "signupForm"}
            %ul
              %li{ :class => "label"}
                %h2
                  Address
                  %span{ :class => "red"} *
              %li{ :class => "textfield"}=text_field_tag("add", "", :placeholder => "1 San Miguel Ave", :class => "required")
          %li{ :class => "signupForm"}
            %ul
              %li{ :class => "label"}
                %h2
                  Size of Shirt
                  %span{ :class => "red"} *
              %li{ :class => "textfield"}=text_field_tag("size", "", :placeholder => "Small", :class => "required")
          %li{ :class => "signupForm"}
            %ul
              %li{ :class => "label"}
                %h2
                  =check_box_tag("checkbox", "", false, :class => "required")
                  %span{ :class => "red"}*
              %li{ :class => "textfield", :id => "checkbox_text"}
                I agree to abide by the 
                =link_to("mechanics", promo_url)
                of the Multiply Limited Edition Promo
        %button{:class => "registered submit btn", :type => "submit", :id => "submit_btn"} Submit
        =image_tag("loading.gif", :id => "submit_loader")
      #signupDet
        %span{:class => "red"} *
        Required Fields